{
  "name": "inquirer-select-with-banner",
  "main": "./dist/commonjs/index.js",
  "types": "./dist/commonjs/index.d.ts",
  "files": [
    "dist"
  ],
  "type": "module",
  "author": {
    "name": "Wayne Griffiths",
    "email": "wayne.c.griffiths@gmail.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/wannabewayno/inquirer-select-with-banner",
  "repository": {
    "type": "git",
    "url": "https://github.com/wannabewayno/inquirer-select-with-banner"
  },
  "keywords": [
    "inquirer",
    "select",
    "banner",
    "prompt",
    "choice"
  ],
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@inquirer/testing": "^2.1.47",
    "@types/bun": "latest",
    "@types/chai": "^5.2.2",
    "@types/chai-as-promised": "^8.0.2",
    "@types/mocha": "^10.0.10",
    "@types/sinon": "^17.0.4",
    "chai": "^5.2.0",
    "chai-as-promised": "^8.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "mocha": "^11.5.0",
    "npm-run-all": "^4.1.5",
    "sinon": "^20.0.0",
    "tshy": "^3.0.2",
    "tsx": "^4.19.4"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "scripts": {
    "preversion": "npm test",
    "postversion": "git push origin --follow-tags && npm publish",
    "prepublishOnly": "npm run build",
    "prepare": "husky",
    "format": "biome format --write",
    "lint": "biome lint --write",
    "check": "tsc --noEmit --skipLibCheck",
    "test": "npx mocha test",
    "build": "tshy"
  },
  "tshy": {
    "exclude": [
      "src/**/*.test.ts",
      "src/example.ts",
      "src/test-utils.ts"
    ],
    "exports": {
      "./package.json": "./package.json",
      ".": "./src/index.ts"
    }
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "npm run format --",
      "npm run lint --"
    ]
  },
  "dependencies": {
    "@inquirer/core": "^10.1.13",
    "@inquirer/figures": "^1.0.12",
    "ansi-escapes": "^7.0.0",
    "yoctocolors": "^2.1.1"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/commonjs/index.d.ts",
        "default": "./dist/commonjs/index.js"
      }
    }
  },
  "module": "./dist/esm/index.js"
}
